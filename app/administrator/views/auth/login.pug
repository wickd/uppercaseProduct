extends layout

block title
    title Sarco | Dashboard Login

block content
    body(class='gray-bg')
        .middle-box.text-center.loginscreen.animated.fadeInDown
            div
                h3 Welcome to Sarco Dashboard!
                p Login in. To see it in action.

                form(method='post', class='m-t', role='form')
                    .form-group
                        input(
                            type='text'
                            class='form-control'
                            placeholder='Email'
                            name='email'
                            id='email'
                            required
                        )

                    .form-group
                        input(
                            type='password',
                            name='password',
                            class='form-control',
                            placeholder='Password'
                            id='password',
                            required
                        )

