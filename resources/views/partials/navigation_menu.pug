ul.menu
    each element in nav_menu
        li
            if element != 'services'
                a(href=route('/' + element)).submenu !{trans(slug(element), element)}
            else
                span.submenu !{trans(slug(element), element)}
            // todo: hardcoded
            if(element == 'services' && ! _.isEmpty(services))
                ol
                    each service in services
                        li
                            a(href=route(`/services/${service.slug}/`)) !{trans(slug(service.present().renderName()), service.present().renderName())}