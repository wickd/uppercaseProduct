extends ../layout
block content
    .content
        .container
            .portfolio-left
                h1  !{item.present().renderName()}
                p !{item.present().renderDescription('long_description', 0)}
                img(src='/assets/img/tmp/5.jpg')
                img(src='/assets/img/tmp/6.jpg')
                img(src='/assets/img/tmp/7.jpg')
                img(src='/assets/img/tmp/8.jpg')
                img(src='/assets/img/tmp/9.jpg')
            .portfolio-right
                .details
                    .info-box
                        strong Adresa:
                        p !{item.address}
                    .info-box
                        strong Descriere:
                        p  !{item.present().renderDescription('description', 0)}
                    .info-box
                        strong Beneficiar:
                        p  !{item.beneficiary}

                    a(href=route(`/portfolio/${category.slug}/constructions/`)).btn-back.go-back go back
