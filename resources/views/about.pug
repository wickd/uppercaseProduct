extends layout
block content
    .content
        .container.about-container
            .left
                h1  !{trans('about_us').toUpperCase()}
                p !{trans('about_us_desc_01')}
                p !{trans('about_us_desc_02')}:
                if(services)
                    ul
                        each service in services
                            li
                                a(href=route(`/services/${service.slug}/`)) !{service.present().renderName()}

                a(href=`/uploads/docs/company_profile_${translator.getLocale()}.pdf` target="_blank").btn-red !{trans('about_us_download_btn')}

            .right
                .about-box
                    span
                    .about-img
                        img(src='/assets/img/about.jpg')